<div class="burger-info">
<h3><%= @burger.name%></h3>
<img src="<%= @image_url %>" alt="<%= @burger.patty %> burger">

<div class="shop-link">Available at: <a href="<%= @burger.shop.website_url%>"><%= @burger.shop.name%></a> </div> 
<div id="map" style="width:100%;height:400px;background:yellow"></div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBYLkE3ri--TYFJCalFaHKoLRRyZ54TkR8"> </script>
<script>
function initMap() {
        var location = {lat: <%= @burger.shop.latitude %>, lng: <%= @burger.shop.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: location
        });
        var marker = new google.maps.Marker({
          position: location,
          map: map
        });
      }
initMap();
</script >
